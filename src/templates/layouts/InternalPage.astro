---
import '../assets/css/pages/internal-page.css';
import OldButtons from '../components/OldStyleButtons/OldStyleButtons.astro';
import SkipToContent from '../components/SkipToContent/SkipToContent.astro';
import Webrings from '../components/Webrings/Webrings.astro';
import BaseLayout from './Base.astro';

interface Props {
	htmlTitle?: string[];
	title: string;
	url: string;
	description: string;
	tags?: string[];
	image?: string;
	imageAlt?: string;
	createdAt?: Date;
	updatedAt?: Date;
	hasFeed?: boolean;
	pageSchema?: string;
}

const {
	htmlTitle,
	title,
	description,
	url,
	tags,
	image,
	imageAlt,
	createdAt,
	updatedAt,
	hasFeed,
	pageSchema
} = Astro.props;
---
<BaseLayout
	{htmlTitle}
	{title}
	{description}
	{url}
	{tags}
	{image}
	{imageAlt}
	{createdAt}
	{updatedAt}
	{hasFeed}
	{pageSchema}
>
	<header>
		<SkipToContent />
		<SiteNav />
		<page-header>
			<slot name="logo"></slot>
			<h1>
				<slot name="header"></slot>
			</h1>
		</page-header>
	</header>

	<div id="contents">
		<slot></slot>
	</div>

	<slot name="footer" slot="footer"></slot>
	<OldButtons slot="footer" />
	<Webrings slot="footer" />
</BaseLayout>
