interface Task {
	isDone: boolean;
	text: string;
	children?: Task[];
}

function formatText(text: string) {
	return text.replaceAll(/\[(?<text>.+?)\]\((?<url>.+?)\)/giu, '<a href="$<url>">$<text></a>');
}

function renderTask(task: Task) {
	const taskId = crypto.randomUUID();
	let childTasks = '';

	if (task.children) {
		childTasks = `
			<ul>
				${task.children.map((childTask) => renderTask(childTask)).join('\n')}
			</ul>
		`;
	}

	return `
		<li>
			<label id="label-${taskId}" for="${taskId}">
				<input
					type="checkbox"
					id="${taskId}"
					name="${taskId}"
					aria-labelledby="label-${taskId}"
					${task.isDone ? 'checked' : ''}
				/>
				<span>${formatText(task.text)}</span>
			</label>
			${childTasks}
		</li>
	`;
}

