import { inlineMarkdownRender } from '../utils/markdown.js';

interface Task {
	isDone: boolean;
	text: string;
	children?: Task[];
	removed?: string;
}

function renderTask(task: Task) {
	const taskId = `todo-${Math.trunc(Math.random() * 1000000).toString(16)}`;
	let childTasks = '';

	if (task.children) {
		childTasks = `
			<ul>
				${task.children.map((childTask) => renderTask(childTask)).join('\n')}
			</ul>
		`;
	}

	return `
		<li>
			<label id="label-${taskId}" for="${taskId}">
				<input
					type="checkbox"
					id="${taskId}"
					name="${taskId}"
					aria-labelledby="label-${taskId}"
					${task.isDone ? 'checked' : ''}
					${task.removed ? 'disabled' : ''}
				/>
				<span>${inlineMarkdownRender(task.text)}</span>
				${task.removed ? `<m-note data-type="info"><small>${task.removed}</small></m-note>` : ''}
			</label>
			${childTasks}
		</li>
	`;
}

