---

<InternalPageLayout
	htmlTitle={['Bookmarks', ...GLOBALS.title]}
	title="Bookmarks"
	description="List of resources I reference often."
	url="/bookmarks/"
	tags={['bookmarks', ...GLOBALS.tags]}
>
	<Logo
		subtitle="Bookmarks"
		shortSubtitle="BM."
		url="/bookmarks/"
		urlTitle="Bookmark page"
		slot="logo"
	/>
	<Fragment slot="header">Bookmarks</Fragment>

	{
		Object.entries(links).map(([sectionName, bookmarks]) => (
			<h2>{sectionName}</h2>
			<ul>
				{
					Object.entries(bookmarks).map(([url, title]) => (
						<li class="h-entry">
							<a class="u-bookmark-of h-cite" href={url}>{title}</a>
						</li>
					))
				}
			</ul>
		))
	}
</InternalPageLayout>
