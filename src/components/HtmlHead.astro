---
import { pwaInfo } from 'virtual:pwa-info';

import defaultSocialImage from '../assets/images/logo-micro.png';

interface Props {
	title: string,
	url: URL | string,
	description: string,
	tags?: string[],
	image?: string,
	imageAlt?: string,
	createdAt?: Date,
	updatedAt?: Date,
	hasFeed?: boolean
}

const { title, url, description, tags, image, imageAlt, createdAt: publishedDate, updatedAt: updatedDate, hasFeed = false } = Astro.props;
const baseUrl = Astro.site?.toString() ?? '/';
const socialImageAlt = imageAlt ?? 'Logo for madcampos\' site consisting of stylized "{m}" in blue.';
const socialImage = `${baseUrl}${(image ?? defaultSocialImage.src).replace(/^\//iu, '')}`;
---
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width,initial-scale=1" />
	<link rel="canonical" href={url.toString()} />
	{ hasFeed && <link rel="alternate" type="application/rss+xml" href={`${baseUrl}blog/feed.xml`} title="Marco Campos' Blog" /> }

	<title>{title}</title>

	<!-- App Metadata -->
	<link rel="icon" href={`${baseUrl}icons/favicon.svg`} />

	{/* eslint-disable-next-line astro/no-set-html-directive */}
	{pwaInfo && (<Fragment set:html={pwaInfo.webManifest.linkTag} />)}

	<!-- Social metadata -->
	<meta property="og:title" name="twitter:title" itemprop="name" content={title} />

	<meta property="og:type" content={hasFeed ? 'article' : 'website'} />
	<meta name="twitter:card" content={socialImage ? 'summary_large_image' : 'summary'} />

	<meta property="og:locale" itemprop="inLanguage" content="en_US" />
	<meta property="og:url" itemprop="url" content={url.toString()} />

	<meta property="og:description" name="description" itemprop="headline" content={description} />
	<meta name="twitter:description" itemprop="abstract" content={description} />

	<meta property="og:image" name="twitter:image" itemprop="image" content={socialImage} />
	<meta property="og:image:alt" name="twitter:image:alt" content={socialImageAlt} />

	<meta property="article:author" name="author" content="Marco Campos" />
	<meta name="twitter:creator" content="@madcampos" />

	<meta name="twitter:dnt" content="on">
	<meta name="twitter:widgets:csp" content="on">
	<meta name="twitter:widgets:autoload" content="off">
	<meta name="twitter:widgets:theme" content="dark">

	{tags && (<meta name="keywords" itemprop="keywords" property="article:tag" content={tags.join(', ')} />)}
	{publishedDate && (<meta property="article:published_time" content={publishedDate.toISOString()} />)}
	{updatedDate && (<meta property="article:modified_time" content={updatedDate.toISOString()} />)}

	<meta name="pinterest" content="nopin">
</head>
