---
import '../assets/css/index.css';

import CSSNakedDay from '../components/CSSNakedDay/index.astro';
import HtmlHead from '../components/HtmlHead/index.astro';
import RefreshBanner from '../components/RefreshBanner/index.astro';

interface Props {
	title: string;
	htmlTitle?: string[];
	url: string;
	description: string;
	tags?: string[];
	image?: string;
	imageAlt?: string;
	createdAt?: Date;
	updatedAt?: Date;
	hasFeed?: boolean;
	pageSchema?: string;
}

const {
	title,
	htmlTitle,
	description,
	url,
	tags,
	image,
	imageAlt,
	createdAt,
	updatedAt,
	hasFeed = false,
	pageSchema = 'WebPage'
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en-US" itemscope itemtype={`https://schema.org/${pageSchema}`}>
	<HtmlHead
		{htmlTitle}
		{title}
		{url}
		{description}
		{tags}
		{image}
		{imageAlt}
		{createdAt}
		{updatedAt}
		{hasFeed}
	/>
	<body class:list={[{ 'h-entry': hasFeed }]}>
		<CSSNakedDay />
		<RefreshBanner />
		<slot name="header"></slot>
		<main>
			<slot></slot>
		</main>

		<footer slot="footer">
			<slot name="footer"></slot>
		</footer>
	</body>
</html>
