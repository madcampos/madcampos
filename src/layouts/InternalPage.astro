---
import '../assets/css/pages/internal-page.css';

import BaseLayout from './Base.astro';
import PageHeader from '../components/PageHeader/index.astro';

interface Props {
	title: string,
	url: string,
	description: string,
	tags?: string[],
	image?: string,
	imageAlt?: string,
	createdAt?: Date,
	updatedAt?: Date,
	hasFeed?: boolean,
	pageSchema?: string
}

const { title, description, url, tags, image, imageAlt, createdAt, updatedAt, hasFeed, pageSchema } = Astro.props;
---
<BaseLayout
	title={title}
	description={description}
	url={url}
	tags={tags}
	image={image}
	imageAlt={imageAlt}
	createdAt={createdAt}
	updatedAt={updatedAt}
	hasFeed={hasFeed}
	pageSchema={pageSchema}
>
	<PageHeader slot="header">
		<slot name="header"></slot>
	</PageHeader>
	<slot></slot>
</BaseLayout>
