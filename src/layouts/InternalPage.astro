---
import '../assets/css/base.css';

import BaseLayout from './Base.astro';
import PageHeader from '../components/PageHeader.astro';

interface Props {
	title: string,
	url: string,
	description: string,
	tags?: string[],
	image?: string,
	imageAlt?: string,
	createdAt?: Date,
	updatedAt?: Date,
	hasFeed?: boolean
}

const { title, description, url, tags, image, imageAlt, createdAt, updatedAt, hasFeed } = Astro.props;
---
<BaseLayout
	title={title}
	description={description}
	url={url}
	tags={tags}
	image={image}
	imageAlt={imageAlt}
	createdAt={createdAt}
	updatedAt={updatedAt}
	hasFeed={hasFeed}
>
	<PageHeader slot="header" title={title} />
	<slot></slot>
</BaseLayout>
