{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "madcampos-site",
	"main": "server/index.ts",
	"compatibility_date": "2025-07-26",
	"compatibility_flags": ["nodejs_compat"],
	"keep_vars": false,
	"send_metrics": false,
	"preserve_file_names": true,
	"minify": true,
	"workers_dev": false,
	"preview_urls": false,
	"route": { "pattern": "madcampos.dev", "custom_domain": true },
	"observability": {
		"enabled": true,
		"head_sampling_rate": 1
	},
	"dev": {
		"ip": "localhost",
		"port": 4242,
		"local_protocol": "https",
		"upstream_protocol": "https"
	},
	"assets": {
		"directory": "./dist",
		"binding": "Assets",
		"run_worker_first": [
			"/api/*",
			"/tojs-styleguide",
			"/tojs-styleguide/",
			"/blog/2023/06/07/tabs-web-component",
			"/blog/2023/06/07/tabs-web-component/",
			"/yapping",
			"/yapping/*"
		],
		"html_handling": "auto-trailing-slash",
		"not_found_handling": "404-page"
	},
	"d1_databases": [
		{
			"binding": "HitCounterDb",
			"database_name": "hit-counter",
			"database_id": "f0efbad9-f79e-4e49-af08-435ac56eb623",
			"preview_database_id": "hit-counter",
			"migrations_dir": "db/migrations",
			"migrations_table": "migrations"
		}
	],
	"vars": { "NODE_ENV": "production" },
	"env": {
		"local": {
			"assets": {
				"directory": "./src",
				"binding": "Assets",
				"run_worker_first": [
					"/api/*",
					"/tojs-styleguide",
					"/tojs-styleguide/",
					"/blog/2023/06/07/tabs-web-component",
					"/blog/2023/06/07/tabs-web-component/",
					"/yapping",
					"/yapping/*"
				],
				"html_handling": "auto-trailing-slash",
				"not_found_handling": "404-page"
			},
			"d1_databases": [
				{
					"binding": "HitCounterDb",
					"database_name": "hit-counter",
					"database_id": "hit-counter-local",
					"preview_database_id": "hit-counter",
					"migrations_dir": "db/migrations",
					"migrations_table": "migrations"
				}
			],
			"vars": { "NODE_ENV": "local" }
		}
	}
}
