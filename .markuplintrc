{
	"parser": {
		".astro$": "@markuplint/astro-parser"
	},
	"rules": {
		"attr-duplication": true,
		"attr-value-quotes": false,
		"case-sensitive-attr-name": false,
		"case-sensitive-tag-name": "lower",
		"character-reference": false,
		"class-naming": false,
		"deprecated-attr": true,
		"deprecated-element": true,
		"disallowed-element": [],
		"doctype": { "options": { "denyObsoleteType": true } },
		"end-tag": true,
		"id-duplication": true,
		"ineffective-attr": true,
		"invalid-attr": false,
		"label-has-control": true,
		"landmark-roles": true,
		"no-boolean-attr-value": false,
		"no-default-value": true,
		"no-empty-palpable-content": false,
		"no-hard-code-id": false,
		"no-refer-to-non-existent-id": true,
		"no-use-event-handler-attr": true,
		"permitted-contents": false,
		"placeholder-label-option": true,
		"require-accessible-name": true,
		"require-datetime": true,
		"required-attr": false,
		"required-element": false,
		"required-h1": { "options": { "expected-once": true, "in-document-fragment": false } },
		"use-list": true,
		"wai-aria": true
	},
	"nodeRules": [
		{
			"selector": "html",
			"rules": {
				"character-reference": false,
				"end-tag": false
			}
		},
		{
			"selector": "meta[name=\"pinterest\"]",
			"rules": {
				"invalid-attr": false
			}
		}
	]
}
