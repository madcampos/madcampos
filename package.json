{
	"name": "madcampos-site",
	"private": true,
	"version": "3.5.0",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=22.0.0"
	},
	"volta": {
		"node": "22.11.0"
	},
	"scripts": {
		"bootstrap:astro": "astro sync",
		"bootstrap:types": "wrangler types server/env.d.ts",
		"bootstrap:certs": "mkdir certs && mkcert -key-file='./certs/server.key' -cert-file='./certs/server.crt' 'localhost'",
		"bootstrap": "npm run bootstrap:types && npm run bootstrap:astro",

		"prestart:api": "bootstrap:types",
		"start:api": "wrangler dev --env=local --https-cert-path certs/server.crt --https-key-path certs/server.key",

		"prestart": "npm run bootstrap:astro",
		"start": "astro dev --site=https://localhost:3000/",

		"prebuild": "npm run bootstrap",
		"build": "astro build",

		"prepreview": "npm run build",
		"preview": "astro preview --site=https://localhost:3000/",

		"predeploy": "npm run build",
		"deploy": "wrangler deploy --minify --env=\"\"",

		"format": "dprint fmt --staged",

		"typecheck": "tsc --noEmit",
		"lint:js": "eslint --fix",
		"lint:md": "astro check",
		"lint": "npm run typecheck && npm run lint:js && npm run lint:md"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/cloudflare": "^12.6.10",
		"@astrojs/sitemap": "^3.6.0",
		"@iconify-json/brandico": "^1.2.3",
		"@iconify-json/fa6-brands": "^1.2.6",
		"@iconify-json/uil": "^1.2.3",
		"@shikijs/transformers": "^3.13.0",
		"@shikijs/twoslash": "^3.13.0",
		"@types/hast": "^3.0.4",
		"@types/mdast": "^4.0.4",
		"@types/node": "^24.7.1",
		"@typescript-eslint/eslint-plugin": "^8.46.0",
		"@typescript-eslint/parser": "^8.46.0",
		"astro": "^5.14.3",
		"astro-icon": "^1.1.5",
		"eslint": "^9.37.0",
		"eslint-plugin-astro": "^1.3.1",
		"globals": "^16.4.0",
		"mdast-util-directive": "^3.1.0",
		"rehype-external-links": "^3.0.0",
		"remark-behead": "^3.1.0",
		"remark-breaks": "^4.0.0",
		"remark-directive": "^4.0.0",
		"remark-flexible-markers": "1.3.1",
		"remark-ins": "1.2.1",
		"typescript": "^5.9.3",
		"unist-util-visit": "^5.0.0",
		"web-features": "^3.4.0"
	},
	"overrides": {
		"array-includes": "npm:@nolyfill/array-includes@^1",
		"array.prototype.flat": "npm:@nolyfill/array.prototype.flat@^1",
		"array.prototype.flatmap": "npm:@nolyfill/array.prototype.flatmap@^1",
		"es-iterator-helpers": "npm:@nolyfill/es-iterator-helpers@^1",
		"hasown": "npm:@nolyfill/hasown@^1",
		"is-core-module": "npm:@nolyfill/is-core-module@^1",
		"object.assign": "npm:@nolyfill/object.assign@^1",
		"object.entries": "npm:@nolyfill/object.entries@^1",
		"object.fromentries": "npm:@nolyfill/object.fromentries@^1",
		"object.values": "npm:@nolyfill/object.values@^1",
		"string.prototype.matchall": "npm:@nolyfill/string.prototype.matchall@^1",
		"yaml-language-server": {
			"prettier": ">=2.8.7"
		}
	},
	"dependencies": {
		"inapp-spy": "^5.0.5",
		"wrangler": "^4.42.2"
	}
}
